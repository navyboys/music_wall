.lead
  %h1 Log In
  %hr
.well
  %form{action: '/login', method: 'post'}
    %div.control-group
      %label Email:
      %input.form-control{ name: 'email', type: 'text' }
    %div.control-group
      %label Password:
      %input.form-control{ name: 'password', type: 'password' }
    %div.control-group
      %input{ type: 'submit', value: 'Log In', class: 'btn btn-success' }
